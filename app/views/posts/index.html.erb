<ul>
  <% @posts.each do |post| %>
    <li>
        <% if current_user %>
            <div>
              <%= post.user_id %>
            </div>
        <% end %>

        <div>
          <%= post.title %>
        </div>
        <div>
          <%= post.body %>
        </div>
    </li>
  <% end %>
</ul>

<% if current_user %>
    <%= link_to "Create Post", new_post_url %>
<% end %>

<%= link_to "Sign in", new_user_session_url %>
<%= button_to "Sign out", destroy_user_session_url, method: :delete %>

